<!DOCTYPE html>
<html>
<head>
  <title>XiraxiCore</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <meta name="user-login" value="<%= h(current_user.email) if respond_to?(:current_user) and current_user %>" />
  <meta name="current-action" value="<%= params[:controller] %>#<%= params[:action] %>" />
</head>
<body>

<%= flash_box :alert %>
<%= flash_box :error %>
<%= flash_box :notice %>

<div id="primary-bar" class="sidebar"><%= content_for :primary_bar %></div>
<div id="main"><%= yield %></div>
<div id="secondary-bar" class="sidebar"><%= content_for :secondary_bar %></div>

</body>
</html>
